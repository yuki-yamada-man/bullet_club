<!DOCTYPE html>
<html>
  <head>
    <title>Mucsle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark navbar-fixed-top", style="background-color: red;">
    <div class= "container">
    <div class= "row">


    <div class="navbar-header">
      <%= link_to "Mucsle Diary", root_path, class: "navbar-brand" %>
    </div>
    <header class="header">
      <% if user_signed_in? %>

      <span class="u h7 text-white strong">
        ようこそ！<%= current_user.name %>
        <%= current_user.name %>さん！
      </span>

      <ul class= navbar-nav>
        <li class="nav-item">
          <%= link_to "My page", user_path(current_user.id), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "User", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Training", trainings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Food", foods_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_session_path, method: :delete, class: "nav-link" %>
        </li>

        <% else %>

        <li class="nav-item">
          <%= link_to "Home", "/", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", home_about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Trainingについて", home_training_info_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Foodについて", home_food_info_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>

      <% end %>

    </header>
    </div>
    </div>

    <%= yield %>

    </nav>

    <footer>
    　<div class="container mt-5">
       <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.</p>
        </div>
       </div>
      </div>
    </footer>
  </body>
</html>
