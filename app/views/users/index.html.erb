<div class= "container my-5">
  <div class= "row">
    <h2>会員一覧</h2>
  </div>
</div>

<div class="row mt-1">
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%=attachment_image_tag user, :image,fallback: "no.image.png",size: "40x40"%>
        </td>
        <td>
          <%= link_to "",user_path(user.id), class:"btn btn-danger" do %>
           <%= user.name %>
          <% end %>
        </td>
        <td>
          <%= user.content %>
        </td>
      </tr>
    </tbody>
  </table>
</div>